print(new)
                                                    # Задание 5

from functools import reduce
li = [i for i in range(100,1002) if i % 2 == 0]
print(li)
result = reduce(lambda a, b: a * b, li)
print(result)
                                                     # Задание 6.1


from itertools import count

st = int(input('Введите начальное число:'))
end = int(input('Введите конечное число:'))
for i in count(st):
    print(i)
    if i == end:
        break
 # 6.2 Не совсем понял задание сделал как разбирали  Помоему работает не корректно
from itertools import cycle
li = input('Введите список через пробел:').split()

for el in cycle(li):
    stop = input('Продолжаем дальше? Для выхода напишите "нет" ')
    if stop.title() == 'нет':
        break
    print(el)
                                                  # Задание 7

def fact(b):
    res = 1
    if b == 0:
        yield f'{b}! = 1'
    for i in range(1, b + 1):
        res *= i
        yield f'{i}! = {res}'

n = int(input('Введите число,максимальный факториал которого хотите получить:'))
for el in fact(n):
    print(el)
