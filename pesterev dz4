from sys import argv

def zp():
    try:
        # virabotka = float(argv[1])
        # stavka = float(argv[2])
        # premia = float(argv[3])
        path,virabotka,stavka,premia = argv
        virabotka,stavka,premia = map(float,argv[1:])
        print('заработная плата:', virabotka * stavka + premia)
    except ValueError:
        print('запустите скрипт с тремя параметрами: выработка,ставка,премия')

zp()
