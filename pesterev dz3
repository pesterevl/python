def info(name,familia,god ,city):
    return f' {name}, {familia},{god},{city},'

print(info(name=input('name:'),familia=input('familia: '),god=input('god:'),city=input('city: ')))

                                                      # Задание 3
def my_func(a_1,a_2,a_3):
       li = [a_1,a_2,a_3]
       try:
           li.remove(min(li))
           return sum(li)
       except TypeError:
           return 'Введены не числа'

print(my_func(4,5,6))

