                                                # Задание 5

def summ():
    res = 0
    while True:
        li = input('Введите числа через пробел, для выхда-stop').split()
        for num in li:
            if num.lower() == 'stop':
                return res
            else:
                try:
                    res = res + int(num)
                except ValueError:
                    print('Для выхода-stop')
        print('summa =',res)
print(summ())
                                                     #  Задание 6-7

def int_func():
    li = input('ВВедите слова через пробел: ').split()
    for word in li:
        lenn = 0
        for ch in word:
            if 97<= ord(ch) <=122:
                lenn = lenn + 1
        if lenn == len(word):
            print(word.title())
        else:
            print(f'ошибка: {word} допустим только нижний регистр')
int_func()
