                                                      # Задание 1
def mi_f(a_2,a_1):
    if a_2 ==0:
       print('На ноль делить нельзя')
    else:
        return a_1 // a_2
print((mi_f(a_1=int(input('Введите число')),a_2=int(input('Введите число')))))

